---
import { ui } from '../i18n/ui';

interface Props {
  lang?: string;
}

const { lang = 'en' } = Astro.props;
const t = ui[lang as keyof typeof ui] || ui.en;
---

<section id="donate" class="relative py-16 md:py-20 overflow-hidden px-4">
  <!-- Decorative Elements -->
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[400px] md:w-[800px] h-[400px] md:h-[800px] bg-accent/10 rounded-full blur-3xl"></div>

  <div class="relative container-custom">
    <!-- Section Label -->
    <div class="text-center mb-4 md:mb-6" data-animate>
      <span class="text-[10px] md:text-xs font-bold uppercase tracking-[0.2em] md:tracking-[0.3em] text-bone-dark opacity-40">
        {t.support || 'Support'}
      </span>
    </div>

    <!-- Heading -->
    <h2 class="section-title font-bold tracking-tighter text-center mb-4 md:mb-6" data-animate>
      SUPPORT <span class="text-accent">OPEN</span> HEALTH
    </h2>

    <!-- Description -->
    <p class="text-center text-sm md:text-base text-bone-dark max-w-2xl mx-auto mb-8 md:mb-12 leading-relaxed opacity-70" data-animate>
      OrionHealth is 100% open source and free forever. Help us build the future of privacy-first healthcare.
    </p>

    <!-- Donation Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6 max-w-4xl mx-auto">
      <!-- GitHub Sponsors -->
      <div class="flashlight-card glass rounded-xl md:rounded-2xl p-6 md:p-8 hover:scale-[1.01] transition-transform duration-500" data-animate>
        <div class="flex items-start justify-between mb-4 md:mb-6">
          <div class="w-10 h-10 md:w-12 md:h-12 rounded-lg md:rounded-xl bg-[#EA4AAA]/10 flex items-center justify-center" style="width: 2.5rem; height: 2.5rem; min-width: 2.5rem; border-radius: 0.5rem; background: rgba(234, 74, 170, 0.1); display: flex; align-items: center; justify-content: center;">
            <svg class="w-5 h-5 md:w-6 md:h-6 text-[#EA4AAA]" fill="currentColor" viewBox="0 0 24 24" style="width: 1.25rem; height: 1.25rem; max-width: 1.5rem; max-height: 1.5rem; color: #EA4AAA;">
              <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
            </svg>
          </div>
          <span class="text-[9px] md:text-[10px] uppercase px-2 py-1 rounded border border-[#EA4AAA]/30 text-[#EA4AAA]">
            Monthly
          </span>
        </div>

        <h3 class="text-base md:text-xl font-bold mb-2 md:mb-3 text-bone">GitHub Sponsors</h3>
        <p class="text-xs md:text-sm text-bone-dark mb-4 md:mb-6 leading-relaxed opacity-70">
          Recurring support directly to the development team. Get early access to features.
        </p>

        <a
          href="https://github.com/sponsors/iberi22"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center gap-2 w-full md:w-auto px-5 md:px-6 py-2.5 md:py-3 rounded-full bg-[#EA4AAA] text-white text-[10px] md:text-xs uppercase font-bold tracking-wider hover:scale-[1.02] hover:shadow-lg hover:shadow-[#EA4AAA]/30 transition-all duration-500"
        >
          <svg class="w-3.5 h-3.5 md:w-4 md:h-4" fill="currentColor" viewBox="0 0 24 24" style="width: 0.875rem; height: 0.875rem; max-width: 1rem; max-height: 1rem;">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          Sponsor on GitHub
        </a>
      </div>

      <!-- Open Collective -->
      <div class="flashlight-card glass rounded-xl md:rounded-2xl p-6 md:p-8 hover:scale-[1.01] transition-transform duration-500" data-animate>
        <div class="flex items-start justify-between mb-4 md:mb-6">
          <div class="w-10 h-10 md:w-12 md:h-12 rounded-lg md:rounded-xl bg-accent/10 flex items-center justify-center" style="width: 2.5rem; height: 2.5rem; min-width: 2.5rem; border-radius: 0.5rem; background: rgba(16, 185, 129, 0.1); display: flex; align-items: center; justify-content: center;">
            <svg class="w-5 h-5 md:w-6 md:h-6 text-accent" fill="currentColor" viewBox="0 0 24 24" style="width: 1.25rem; height: 1.25rem; max-width: 1.5rem; max-height: 1.5rem; color: #10B981;">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/>
              <circle cx="12" cy="12" r="3"/>
            </svg>
          </div>
          <span class="text-[9px] md:text-[10px] uppercase px-2 py-1 rounded border border-accent/30 text-accent">
            One-time
          </span>
        </div>

        <h3 class="text-base md:text-xl font-bold mb-2 md:mb-3 text-bone">Open Collective</h3>
        <p class="text-xs md:text-sm text-bone-dark mb-4 md:mb-6 leading-relaxed opacity-70">
          Transparent financial support. One-time or recurring. Community governed budget.
        </p>

        <a
          href="https://opencollective.com/orionhealth"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-secondary inline-flex items-center justify-center gap-2 w-full md:w-auto px-5 md:px-6 py-2.5 md:py-3 text-[10px] md:text-xs"
        >
          <svg class="w-3.5 h-3.5 md:w-4 md:h-4" fill="currentColor" viewBox="0 0 24 24" style="width: 0.875rem; height: 0.875rem; max-width: 1rem; max-height: 1rem; color: #10B981;">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/>
            <circle cx="12" cy="12" r="3"/>
          </svg>
          Contribute
        </a>
      </div>
    </div>

    <!-- Bottom Note -->
    <p class="text-center text-[10px] md:text-xs text-bone-dark opacity-40 uppercase tracking-wider mt-8 md:mt-12">
      100% Transparent • Community Governed • Open Source
    </p>
  </div>
</section>
